<div class="container">
    <h2>Movies index view</h2>

    <div class="row">
        <div class="col-md-6">
            {{#each allMovies}}
            <h3>
                <a href="/movies/{{id}}">{{title}}</a>
            </h3>
            <div class="row">
                <div class="col-md-5">
                    <form action="/movies/{{id}}/delete" method="POST">
                        <button type="submit" class="btn btn-dark btn-block">Delete</button>
                    </form>
                </div>

                <div class="col-md-5">

                    <a href="/movies/{{id}}/edit">Edit</a>
                </div>

            </div>
            {{/each}}

        </div>
        <div class="col-md-4">
            <h3>
                <a href="/movies/new">New movie</a>
            </h3>


        </div>
    </div>


</div>